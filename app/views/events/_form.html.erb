<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>
  <%= f.label :date %>
  <%= f.text_field :date %><br/>
  <%= f.label :description %>
  <%= f.text_field :description %><br/>
  <%= f.hidden_field :user_id, :value => params[:user_id].to_i %>
<%= f.submit %>
<% end %>
